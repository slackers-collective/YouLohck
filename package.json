{
  "type": "module",
  "scripts": {
    "tsc": "npx tsc --watch",
    "tailwind": "npx @tailwindcss/cli -i ./popup/popup.css -o ./popup/output.css --watch",
    "tailwind:build": "npx @tailwindcss/cli -i ./popup/popup.css -o ./popup/output.css",
    "alpine": "npx esbuild popup/alpine.ts --bundle --minify --outfile=dist/alpine.js --format=esm --target=es2020 --watch",
    "alpine:build": "npx esbuild popup/alpine.ts --bundle --minify --outfile=dist/alpine.js --format=esm --target=es2020",
    "copy-dir": "mkdir -p build/popup && cp manifest.json build/ && cp -r popup/*.html build/popup/ && cp -r popup/*.css build/popup/ && cp -r popup/*.png build/popup/ && cp -r dist build/",
    "build": "rm -rf build && tsc && npm run tailwind:build && npm run alpine:build && npm run copy-dir"
  },
  "devDependencies": {
    "@types/alpinejs": "^3.13.11",
    "@types/chrome": "^0.1.1",
    "@types/webextension-polyfill": "^0.12.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@alpinejs/csp": "^3.14.9",
    "@tailwindcss/cli": "^4.1.11",
    "alpinejs": "^3.14.9",
    "tailwindcss": "^4.1.11",
    "webextension-polyfill": "^0.12.0"
  }
}
