{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    //run all my package.json tasks here
    {
      "label": "tsc",
      "type": "shell",
      "command": "npm run tsc"
    },
    {
      "label": "tailwind",
      "type": "shell",
      "command": "npm run tailwind"
    },
    {
      "label": "alpine",
      "type": "shell",
      "command": "npm run alpine"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "npm run build"
    },
    //now run all
    {
      "label": "run all",
      "dependsOn": ["tsc", "tailwind", "alpine"],
      "command": "echo 'Running all tasks...'"
    }
  ]
}
